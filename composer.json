{
  "name": "genies/messengerframework",
  "description": "各サービスのMessengerBotのラッパー",
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.1",
    "phpdocumentor/phpdocumentor": "^2.9"
  },
  "autoload": {
    "psr-4": {
      "MessengerFramework\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MessengerFramework\\Test\\": "tests/"
    }
  },
  "archive": {
    "exclude": [
      "*",
      ".*",
      "!/src/*",
      "!README.md"
    ]
  }
}
